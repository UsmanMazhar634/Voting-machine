
<p class="lead text-center">
   Poll's List
</p>
<br>

<table class="table table-hover">
  <thead>
    <tr>
      <th>Poll ID</th>
      <th>Start date</th>
      <th>End date</th>
      <th>Poll Status</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @polls.each do |poll| %>
      <tr>
        <td><%= poll.id %></td>
        <td><%= poll.start_date %></td>
        <td><%= poll.end_date %></td>


        <% if Time.now < poll.end_date %>
          <td><%= link_to "Cast Vote In Poll", poll_path(poll.id) %></td>
        <% else %>
          <td><%= "Poll Closed" %></td>
        <% end %>

        <% if Time.now > poll.end_date %>
          <td><%= link_to "Show Results", fetch_result_poll_path(poll.id) %></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>
<br>
